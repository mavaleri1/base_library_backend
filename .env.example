# Production (VPS + Vercel): set your Vercel URL for material links and CORS
# WEB_UI_BASE_URL=https://your-project.vercel.app
# CORS_ORIGINS=https://your-project.vercel.app,https://*.vercel.app

# Opik Configuration
OPIK_API_KEY=your-opik-api-key-here
OPIK_API_BASE_URL=https://api.opik.com
OPIK_PROJECT_NAME=base-library
OPIK_ENABLED=true

# Clerk (artifacts-service) — JWKS/Issuer для проверки JWT от Clerk
ARTIFACTS_CLERK_JWKS_URL=https://your-clerk-instance.clerk.accounts.dev/.well-known/jwks.json
ARTIFACTS_CLERK_ISSUER=https://your-clerk-instance.clerk.accounts.dev
# ARTIFACTS_CLERK_AUDIENCE=  # опционально

# Clerk (prompt-config-service)
CLERK_JWKS_URL=https://your-clerk-instance.clerk.accounts.dev/.well-known/jwks.json
CLERK_ISSUER=https://your-clerk-instance.clerk.accounts.dev
# CLERK_AUDIENCE=  # опционально

# URL artifacts-service (в Docker — по имени сервиса)
ARTIFACTS_SERVICE_URL=http://artifacts-service:8001

# URL prompt-config-service (в Docker — по имени сервиса; с протоколом http://)
PROMPT_SERVICE_URL=http://prompt-config-service:8002

# OpenAI API key (для security guard и узлов с OpenAI; при использовании других провайдеров — ключи в configs/providers.yaml)
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# PostgreSQL Database URL
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/core

# DeepSeek API key (опционально)
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here

# Gemini API key (опционально)
GEMINI_API_KEY=your-gemini-api-key-here
